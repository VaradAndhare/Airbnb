<% layout("/layouts/boilerplate") %>

<body>
    <div class="row">
      
    <div class="col-8 offset-3">
        <h1><%= listing.title %></h1>
    </div>
    <div class="card listing-card col-6 offset-3">
        <img src="<%= listing.image.url %>" class="card-img-top detailed-card-img" alt="listing_image">
        <div class="card-body">
           <p class="card-text">
              <p>Owned By <i><%= listing.owner.username %></i></p>
              <p><%= listing.description%></p>
              <P>&#8377;<%= listing.price.toLocaleString("en-IN") %></P>
              <p><%= listing.location %></p>
              <p><%= listing.country %></p>
           </p>
        </div>
    </div>
    <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
    <div class="btns mb-4">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark offset-3 detailed-btn">Edit listing</a>
    
        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark" style="margin-left: 2rem;">Delete listing</button>
        </form>
    </div>
    <% } %>
   <hr>
   
   <div class="col-6 offset-3">
      <% if(currUser) {%> 
       <div>  
       <h4>Listing Review</h4>
       
       <form method="post" action="/listings/<%= listing._id %>/reviews" novalidate class="needs-validation">
        <div >
         <label for="rating" class="form-lable">Rating</label><br>
        <fieldset class="starability-grow">
         <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
         <input type="radio" id="first-rate1" name="review[rating]" value="1" />
         <label for="first-rate1" title="Terrible">1 star</label>
         <input type="radio" id="first-rate2" name="review[rating]" value="2" />
         <label for="first-rate2" title="Not good">2 stars</label>
         <input type="radio" id="first-rate3" name="review[rating]" value="3" />
         <label for="first-rate3" title="Average">3 stars</label>
         <input type="radio" id="first-rate4" name="review[rating]" value="4" />
         <label for="first-rate4" title="Very good">4 stars</label>
         <input type="radio" id="first-rate5" name="review[rating]" value="5" />
         <label for="first-rate5" title="Amazing">5 stars</label>
         </fieldset>
         </div>
        <div>
          <label for="comment" class="form-lable">Comments</label><br>
          <textarea name="review[comment]" rows="5" cols="30" class="form-control mt-1" required></textarea>
          <div class="invalid-feedback"> 
                Please write some comment!
          </div>
        </div>
        <button class="btn btn-outline-dark mt-3 mb-3">Submitt</button>
       </form>
       </div>
      <% } %>
        <div class="mb-3">
         <p><b>All Reviews</b></p>
         <div class="row">
            <div class="card col-5 mb-1 ms-1">
               <div class="card-body">
                <h5 class="card-title">@<%= review.author.username %></h5>
                <p class="starability-result card-text" data-rating="<%= review.rating %>">
                  Rated: 3 stars
                </p>
                <p class="card-text"><%= review.comment %></p>
               </div>
               <form method="post" action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=DELETE">
                <button class="btn btn-sm btn-dark mb-2 mt-3">Delete</button>
               </form>
            </div>
         </div>
        </div>
   </diV>
   </div> 
   <div class="col-8 offset-2 mb-3">
      <h3>Where you'll be</h3>
   </div>
   <div id="map" style="height:400px; width: 900px" class="col-8 offset-2 mb-3">
   </div>
   <script>
    
     const map = L.map('map').setView([19.0760, 72.8777], 13);

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
       attribution: '&copy; OpenStreetMap contributors'
      }).addTo(map);

      const listing = JSON.stringify(listing);
       console.log(listing);

      console.log(listing)

      if (listing.geometry && listing.geometry.coordinates.length === 2) {
        L.marker([listing.geometry.coordinates[1], listing.geometry.coordinates[0]])
        .addTo(map)
        .bindPopup(`<b>${listing.title}</b><br>${listing.location}`)
        .openPopup();

    // Center map on listing location
         map.setView([listing.geometry.coordinates[1], listing.geometry.coordinates[0]], 13);
      } 
</script>
</body>
