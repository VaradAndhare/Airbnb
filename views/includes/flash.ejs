<% if(success && success.length) { %>
    <div class="alert alert-success col-6 offset-3 alert-dismissible fade show">
       <p><%= success %></p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>   
    </div>   
<% } %>

<% if(error && error.length) { %>
    <div class="alert alert-danger col-6 offset-3 alert-dismissible fade show">
       <p><%= error %></p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>   
    </div>   
<% } %>
